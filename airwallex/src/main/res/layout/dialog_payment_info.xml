<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/circularstd_bold"
        android:textColor="@color/airwallex_color_price"
        android:textSize="22sp"
        tools:text="title" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp" />


    <RelativeLayout
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/airwallex_button_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/airwallex_button_solid"
        android:enabled="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:drawableStart="@drawable/airwallex_ic_lock_selector"
            android:drawablePadding="10dp"
            android:duplicateParentState="true"
            android:focusable="false"
            android:fontFamily="@font/circularstd_bold"
            android:orientation="horizontal"
            android:text="@string/airwallex_pay_now"
            android:textColor="@color/airwallex_button_text"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>

